{% extends 'base.html.twig' %}

{% block title %}Hello MasterController!{% endblock %}

{% block body %}
<style>
    .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="wrapper">
    <h1>Hello!</h1>
    <form method="post" action="">
        <label for="message">Type your message:</label><br>
        <input type="text" id="message" name="message"><br>
        <label for="transform"></label>
        <select name="transform" id="transform">
            <option value="capitalize">Capitalize</option>
            <option value="changeSpaces">Spaces to dashes</option>
        </select>
        <br><br>
        <input type="submit" value="Submit">
    </form>
    <br>
    <h3>Transformed message:</h3>
    <p>{{ transformMsg }}</p>
</div>
{% endblock %}
